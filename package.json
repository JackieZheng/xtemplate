{
  "name": "xtemplate-root",
  "private": true,
  "description": "High Speed, eXtensible Template Engine lib on browser and nodejs",
  "author": "yiminghe <yiminghe@gmail.com>",
  "keywords": [
    "template",
    "template engine",
    "browser",
    "nodejs"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/xtemplate/xtemplate.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precompile-test": "BABEL_ENV=test babel-node node_modules/.bin/gulp precompile-test",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"{src,__tests__}/**/*.{js,tsx}\"",
    "bootstrap": "yarn workspaces run install",
    "clean": "lerna clean",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "build": "lerna run build",
    "pub": "git push && npm run publish",
    "publish": "npm run build && lerna publish",
    "start": "start-storybook -p 6006",
    "deploy": "storybook-to-ghpages",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "kison": "^0.3.3",
    "gulp": "^3.8.7",
    "gulp-xtemplate": "3.x",
    "@babel/preset-react": "^7.0.0",
    "@pika/plugin-build-node": "^0.5.1",
    "@pika/plugin-build-web": "^0.5.1",
    "@pika/plugin-standard-pkg": "^0.5.1",
    "@pika/types": "^0.5.1",
    "@storybook/react": "^5.1.9",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^2.13.1",
    "highlight.js": "~8.9.1",
    "jest": "^24.8.0",
    "js-beautify": "~1.5.10",
    "lint-staged": "^7.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.11.1"
  },
  "lint-staged": {
    "*.{tsx,js,jsx,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ]
}
